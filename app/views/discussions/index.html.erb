<div class="container-fluid">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6" style="text-align:center;">
      <div class="panel panel-primary filterable table_border">
        <div class="panel-heading table_new">
          <h3 class="panel-title">
            <%# @course = Course.find_by_id(params[:course_id]) %>
            《<%= @course.name %>》课程悄悄话
          </h3>
        </div>
        </br>

        <div id="button-edit">
          <div class="panel-body" style="text-align:left;">
            <div class="table-responsive">
              <tbody>

              <% @cnt=0 %>

              <% @discussion.each do |discuss| %>
                  <% @cnt +=1 %>

                    <td><a><%= discuss.content %></a></td>
                  <br>
                  <font size="1" color="red">
             <span class="glyphicon glyphicon-user">
             <td><%= discuss.user %></td>
             <span>
               <span class="glyphicon glyphicon-calendar">
              
              <td><%= discuss.created_at.strftime('%Y年%m月%d日 %H:%M') %></td>
      
              </span>
                  </font>
                  <hr/>
              <% end %>
              </tbody>
            </div>
          </div>
          <div>
            <% if @cnt == 0 %>
                  <a>暂时无人发言，留下第一条评论吧</a>
                <br><br>
            <% end %>
          </div>
          <div style="margin-bottom: 20px">
            <%= form_tag(url: discussions_path(course_id: @course.id), method: "patch") do %>
                <%= text_area(:@discussion, :content) %>
                <input id="course_id" name="course_id" type="hidden" style="margin-bottom:20px" value="<%= @course.id %>"/>
                <br>
                <br>
                <button type="submit" class="btn btn-default btn_new" >提交</button>

            <% end %>
          </div>

        </div>
        <div>

        </div>
      </div>
    </div>
  </div>
</div>