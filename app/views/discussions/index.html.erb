<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12" style="text-align:center;">
      <div class="panel panel-primary filterable">
        <div class="panel-heading">
          <h3 class="panel-title">
            <%# @course = Course.find_by_id(params[:course_id]) %>
              《<%= @course.name %> 》Discuss区
          </h3>
        </div>
                           </br>
                           
        <div id="button-edit">
  
          <!--

        <%# form_for @discussion ,url: discussions_url(course_id: @course.id) ,method: :patch  do |f| %>
          <div class="form-group">
         <%#= f.label "请输入匿名发言的内容：", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group input-group-lg">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%#= f.text_area :content, class: 'form-control', placeholder: "输入匿名发言" %>
        </div>
      </div>
    </div>
    

    <%#= f.submit '提交', class: "btn btn-success btn-block" %>
    
    <%#= link_to '取消', courses_path, :class => "btn btn-default btn-block" %>
   <%# end %>
   
   -->
   

          <div class="panel-body" style="text-align:left;">
            <div class="table-responsive">
          <tbody>
           
             <% @cnt=0 %>  
             
             <% @discussion.each do |discuss| %>
             <% @cnt +=1 %>
             <font size="4" color="black">
             <td><%= discuss.content %></td>
             </font>
             <br>
             <font size="1" color="red">
             <span class="glyphicon glyphicon-user">
             <td><%= discuss.user %></td>
             <span>
               <span class="glyphicon glyphicon-calendar">
              
              <td><%= discuss.created_at.strftime('%Y年%m月%d日 %H:%M') %></td>
      
              </span>
              </font>
              <hr />
          <% end %>
          </tbody>
            </div>
          </div>
          
            <% if @cnt == 0 %>
            <font size="5" color="red">
              暂时无人发言！
            </font>
              <br><br>
             <% end %>
          
                 
          <%= form_tag( url: discussions_path(course_id: @course.id),method: "patch") do %>
          <%= text_area(:@discussion, :content) %>
          <input id="course_id" name="course_id" type="hidden" value="<%= @course.id %>" />
          <br>
          <button type="submit" class="btn btn-default">提交</button>
          <% end %>
          
        </div>
      </div>
    </div>
  </div>
</div>